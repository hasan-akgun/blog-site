doctype html 
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
body
    // Header with Welcome and Login Button
    header.container-fluid.bg-light.py-3.border-bottom
        .d-flex.justify-content-between.align-items-center
            h1.m-0 Welcome
            button#loginButton.btn.btn-primary(type="button") Login

    // Main Content
    main.container.mt-4
        p.lead This is a simple homepage created with Bootstrap and PugJS.
        button#blogButton.btn.btn-primary(type="button") Blog

script.

  document.getElementById('loginButton').addEventListener('click', function(e) {
    window.location.href = '/login'
  });

  document.getElementById('blogButton').addEventListener('click', function(e) {
    window.location.href = '/blog'
  });